<h2>Sign in</h2>

<%= form_for(:session, :url => sessions_path) do |f| %>
	<ul>
		<li>
			<%= f.label :email %><br />
			<%= f.text_field :email %>
		</li>

		<li>
			<%= f.label :password %><br />
			<%= f.password_field :password %>
		</li>

		<li>
			<%= f.submit "Sign in" %>
		</li>
	</ul>
<% end %>

<p>New user? <%= link_to "Sign up now", signup_path %>.</p>